{
    "compilerOptions": {
      "outDir": "dist",
      "rootDir": "src",
      "target": "ESNext",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  